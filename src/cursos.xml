<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <package name="cursosPackage" extends="struts-default,json-default">
        <action name="listaCursos" class="mx.edu.utez.curso.CursoController" method="listaCursos">
            <result type="json"/>
        </action>

        <action name="registrarCurso" class="mx.edu.utez.curso.CursoController" method="registrarCurso">
            <result type="json"/>
        </action>

        <action name="eliminarCurso" class="mx.edu.utez.curso.CursoController" method="eliminaCurso">
            <result type="json"/>
        </action>

        <action name="buscarCursoModificar" class="mx.edu.utez.curso.CursoController" method="buscarCursoModificar">
            <result name="success">/vista/AP/ModificarCursoAP.jsp</result>
        </action>
        <action name="buscarCursoModificarCOD" class="mx.edu.utez.curso.CursoController" method="buscarCursoModificar">
            <result name="success">/vista/Coordinador/ModificarCursoCOD.jsp</result>
        </action>
        <action name="buscarCursoModificarRAPE" class="mx.edu.utez.curso.CursoController" method="buscarCursoModificar">
            <result name="success">/vista/RAPE/ModificarCursoRAPE.jsp</result>
        </action>

        <action name="buscarCursoModificarRD" class="mx.edu.utez.curso.CursoController" method="buscarCursoModificar">
            <result name="success">/vista/RD/ModificarCursoRD.jsp</result>
        </action>
        <action name="buscarCursoModificarRH" class="mx.edu.utez.curso.CursoController" method="buscarCursoModificar">
            <result name="success">/vista/RH/ModificarCursoRH.jsp</result>
        </action>

        <action name="actualizarCurso" class="mx.edu.utez.curso.CursoController" method="actualizaCurso">
            <result type="json"/>
        </action>
        <action name="actualizarArchivo" class="mx.edu.utez.curso.CursoController" method="modificaArchivo">
            <result type="json"/>
        </action>

    </package>

</struts>